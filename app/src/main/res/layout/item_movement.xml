<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/corner_radius"
    android:layout_margin="@dimen/margin_item_movement">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_movement"
            android:layout_marginLeft="@dimen/margin_movement"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/img_detail">

            <TextView
                android:id="@+id/txt_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/note_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_location"
                android:textSize="@dimen/location_date_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_movement"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/location_date_size" />

        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_date"
            android:layout_marginRight="@dimen/margin_movement"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

