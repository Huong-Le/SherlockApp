<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbmovement"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left_movement"
        android:layout_marginTop="@dimen/margin_right_movement"
        android:orientation="vertical">

        <TextView
            android:text="Person Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_movement"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_name_movement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_movement" />

        <TextView
            android:text="Movement time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_movement"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_time_movement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_movement" />

        <TextView
            android:text="Movement note:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/label_movement" />

        <TextView
            android:id="@+id/txt_note_movement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_movement" />

        <TextView
            android:text="Movement Location:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/label_movement" />

        <TextView
            android:id="@+id/txt_location_movement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content_movement" />
    </LinearLayout>

</LinearLayout>
