<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/cover">

    <ImageButton
        android:id="@+id/btn_cover_info"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_width="@dimen/cover"
        android:layout_height="@dimen/cover" />

    <EditText
        android:id="@+id/et_name_info"
        android:layout_toRightOf="@+id/btn_cover_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:hint="Input Name (Required)"
        android:textColor="@color/black" />

</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="@dimen/none"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <TextView
            android:id="@+id/txt_age_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age (Required):"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_age_info"
            android:layout_below="@+id/txt_age_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Age"
            android:gravity="center"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/none"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <TextView
            android:id="@+id/txt_height_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height (Required):"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

        <EditText
            android:inputType="number"
            android:id="@+id/et_height_info"
            android:layout_below="@+id/txt_height_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Height"
            android:gravity="center"
            android:textColor="@color/black" />

    </RelativeLayout>

</LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Gender (Required):"
    android:textColor="@color/black"
    android:gravity="center"
    android:textSize="@dimen/text_size" />


<RadioGroup
    android:id="@+id/rg_gender"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rb_male_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:checked="true"
        android:textSize="@dimen/text_size" />

    <RadioButton
        android:id="@+id/rb_female_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textSize="@dimen/text_size" />

</RadioGroup>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/line"
    android:layout_marginLeft="@dimen/margin_line"
    android:layout_marginRight="@dimen/margin_line" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Hair Color (Optional):"
    android:textColor="@color/black"
    android:gravity="center"
    android:textSize="@dimen/text_size" />

<EditText
    android:id="@+id/et_hair_color_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Input Hair Color"
    android:gravity="center"
    android:textColor="@color/black" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Address (Optional):"
    android:textColor="@color/black"
    android:gravity="center"
    android:textSize="@dimen/text_size" />

<EditText
    android:id="@+id/et_address_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Input Address"
    android:gravity="center"
    android:textColor="@color/black" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Additional Comment (Optional):"
    android:textColor="@color/black"
    android:gravity="center"
    android:textSize="@dimen/text_size" />

<EditText
    android:id="@+id/et_comment_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Input Additional Comment"
    android:gravity="center"
    android:textColor="@color/black" />


<Button
    android:id="@+id/btn_save"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Save"
    android:textSize="@dimen/text_size" />


</LinearLayout>
</ScrollView>